<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:layout_width="300dp"
        android:padding="8dp"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user2"
        android:id="@+id/profile_image1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/profile_image1"
        android:text="hello"
        android:id="@+id/show_msgtxt"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/leftchatbk"

        />
        <TextView
            android:layout_below="@+id/show_msgtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtseen"
            android:visibility="gone"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/trash_24dp"
            android:layout_toLeftOf="@+id/show_msgtxt"
            android:id="@+id/trash"
            android:visibility="gone"
            />
    </RelativeLayout>

</RelativeLayout>